{
  "name": "subtls-dev",
  "version": "0.4.1",
  "description": "Pure JS TLS 1.3 (development repo)",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "exportTypes": "tsc && npx @microsoft/api-extractor run --local && sed -i.orig -r -e '/^export [{] *[}]$/d' declarations/_extracted.d.ts && (echo '/// <reference types=\"node\" />'; echo; cat declarations/_extracted.d.ts) > export/index.d.ts",
    "export": "npm run exportTypes && esbuild --define:chatty=0 src/export.ts --bundle --format=esm --target=es2020 --outfile=export/index.js --line-limit=110",
    "build": "npm run exportTypes && esbuild --define:chatty=1 src/index.ts --bundle --format=esm --target=es2020 --external:fs/promises --loader:.pem=text --outfile=docs/index.js",
    "watch": "esbuild --define:chatty=1 src/index.ts --bundle --format=esm --target=es2020 --external:fs/promises --loader:.pem=text --outfile=docs/index.js --watch",
    "serve": "servor docs index.html 6543",
    "start": "npm-run-all --parallel --race watch serve",
    "nodeChatty": "esbuild --define:chatty=1 src/node.ts --bundle --format=esm --target=es2022 --platform=node --external:ws --loader:.pem=text | node",
    "nodeQuiet": "esbuild --define:chatty=0 src/node.ts --bundle --format=esm --target=es2022 --platform=node --external:ws --loader:.pem=text | node"
  },
  "author": "George MacKerron",
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.24.0",
    "npm-run-all": "^4.1.5",
    "servor": "^4.0.2",
    "typescript": "^5.0.4",
    "@microsoft/api-extractor": "^7.48.1"
  },
  "dependencies": {
    "@types/node": "^22.10.2",
    "@types/ws": "^8.5.4",
    "ws": "^8.13.0"
  }
}