{
  "name": "jstls",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "check": "tsc --noEmit",
    "export": "npm run check && esbuild --define:chatty=0 src/export.ts --bundle --format=esm --target=es2022 --outfile=export/index.js --minify",
    "build": "npm run check && esbuild --define:chatty=0 src/index.ts --bundle --format=esm --target=es2022 --loader:.pem=text --outfile=dist/index.min.js --minify",
    "watch": "esbuild --define:chatty=true src/index.ts --bundle --format=esm --target=es2022 --loader:.pem=text --outfile=dist/index.js --watch",
    "serve": "servor dist index.html 6543",
    "start": "npm-run-all --parallel --race watch serve",
    "nodeChatty": "esbuild --define:chatty=true src/node.ts --bundle --format=esm --target=es2022 --platform=node --loader:.pem=text --outfile=nodeDist/index.js && node nodeDist/index.js",
    "nodeQuiet": "esbuild --define:chatty=false src/node.ts --bundle --format=esm --target=es2022 --platform=node --loader:.pem=text --outfile=nodeDist/index.js && node nodeDist/index.js"
  },
  "author": "George MacKerron",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.16.1",
    "esbuild": "^0.17.18",
    "npm-run-all": "^4.1.5",
    "servor": "^4.0.2",
    "typescript": "^5.0.4"
  }
}
